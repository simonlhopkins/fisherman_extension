{
	"name": "Please Don't Stop!",
	"version": "1.0",
	"description": "just play my game dude!",
	"permissions": ["storage", "tabs"],
	"manifest_version": 2,
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"page_action": {
    	"default_popup": "popup.html"
    },
    "content_scripts": [
   		{
			"matches": ["<all_urls>"],
			"css": ["./stylesheet.css"],
			"js": ["./jquery-3.4.1.min.js", "./scripts/model.js", "./scripts/controller.js"],
			"run_at": "document_end"
		}
	],

	"web_accessible_resources": [
    "images/*"]
}
